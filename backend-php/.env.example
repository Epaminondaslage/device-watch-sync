# =====================================================
# Configurações do Sistema IoT MQTT
# Copie este arquivo para .env e ajuste os valores
# =====================================================

# Ambiente (development, production)
APP_ENV=production
APP_DEBUG=false
APP_URL=https://iot.seudominio.com

# =====================================================
# Banco de Dados MySQL
# =====================================================
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=iot_mqtt_db
DB_USERNAME=iot_user
DB_PASSWORD=sua_senha_segura_aqui
DB_CHARSET=utf8mb4

# =====================================================
# Configurações de Sessão/JWT
# =====================================================
# Gere uma chave segura com: openssl rand -hex 32
JWT_SECRET=sua_chave_jwt_super_secreta_aqui_min_32_chars
JWT_EXPIRY=86400

# Tempo de expiração da sessão em segundos (24 horas)
SESSION_LIFETIME=86400

# =====================================================
# MQTT Broker (valores padrão, podem ser alterados via UI)
# =====================================================
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=iot_server_01

# =====================================================
# Logs
# =====================================================
LOG_LEVEL=info
LOG_PATH=/var/www/html/iot-mqtt/logs

# =====================================================
# Segurança
# =====================================================
# Domínios permitidos para CORS (separados por vírgula)
CORS_ORIGINS=https://seudominio.com,https://app.seudominio.com

# Rate limiting (requisições por minuto)
RATE_LIMIT=60

# =====================================================
# Criptografia
# =====================================================
# Chave para criptografia de senhas MQTT (AES-256)
# Gere com: openssl rand -hex 32
ENCRYPTION_KEY=sua_chave_de_criptografia_aqui
